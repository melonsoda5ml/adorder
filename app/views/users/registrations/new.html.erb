<h2>ユーザー登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label "お名前" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <em>(業務で利用しているアドレスを入力してください)</em>
    <br/><%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label "所属部署" %><br />
    <%= f.text_field :division %>
  </div>

  <div class="field">
	<%= f.label "役割／権限" %>
	<br />
	<%= f.select :role,  [["営業",0],["媒体マネージャー",1], ["業務",2]] %>
	<div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %>文字以上にしてください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label "パスワードの確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

